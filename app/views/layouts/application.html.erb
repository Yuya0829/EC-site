<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  　<%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

　　<% if flash[:notice] %>
      <p id="notice">
        <%= flash[:notice] %>
      </p>
    <% end %>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand">
            <span>Nagano Cake</span>
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav4" aria-controls="navbarNav4" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        　</button>
        　<div class="navbar-collapse collapse show" id="navbarNavDropdown">
        　<ul class="navbar-nav ml-auto">

        　<% if admin_signed_in? %>

        　 <li>
           <%= link_to admin_items_path,class:"nav-link text-light" do %>
             商品一覧
           <% end %>
           </li>

           <li>
            <%= link_to admin_customers_path,class:"nav-link text-light" do %>
             会員一覧
            <% end %>
           </li>

           <li>
            <%= link_to admin_path,class:"nav-link text-light" do %>
             注文履歴一覧
            <% end %>
           </li>

           <li>
            <%= link_to admin_genres_path,class:"nav-link text-light" do %>
             ジャンル一覧
            <% end %>
           </li>

           <li>
            <%= link_to destroy_admin_session_path,class:"nav-link text-light", method: :delete do %>
             ログアウト
            <% end %>
           </li>

          <% elsif customer_signed_in? %>

          <li>
            <%= link_to customers_my_page_path,class:"nav-link text-light" do %>
              マイページ
            <% end %>
          </li>

          <li>
            <%= link_to items_path,class:"nav-link text-light" do %>
              商品一覧
            <% end %>
          </li>

          <li>
            <%= link_to cart_items_path,class:"nav-link text-light" do %>
              カート
            <% end %>
          </li>

          <li>
            <%= link_to destroy_customer_session_path,class:"nav-link text-light", method: :delete do %>
             ログアウト
            <% end %>
           </li>

          <% else %>

          <li>
            <%= link_to about_path,class:"nav-link text-light" do %>
              About
            <% end %>
          </li>

          <li>
            <%= link_to items_path,class:"nav-link text-light" do %>
              商品一覧
            <% end %>
          </li>

          <li>
            <%= link_to new_customer_registration_path,class:"nav-link text-light" do %>
              新規登録
            <% end %>
          </li>

          <li>
           <%= link_to new_customer_session_path,class:"nav-link text-light" do %>
              ログイン
           <% end %>
          </li>

          <% end %>

        </div>
      </nav>

    </header>

    <%= yield %>

    <br>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>Nagano Cake</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
