<div class="container">
  <br>
  <br>
  <div class="row">

    <div class="col-lg-2">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>ジャンル検索</th>
          </tr>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-lg-10">

      <h2><b>商品一覧</b></h2>
      <h4>（全<%= @items_count %>件）</h4>

      <div class="row">
      <% @items.each do |item| %>
        <div class="mr-3"><%= link_to image_tag(item.image,size:"150x100"), item_path(item.id) %>
          <p><%= link_to item.name, item_path(item.id) %></p>
          <p><%= item.price %></p>
        </div>
      <% end %>
      </div>

      <div class="col-lg-3 offset-lg-4">
      <%= paginate @items %>
      </div>
    </div>
  </div>
</div>
