<div class="container">
  <br>
  <br>
  <div class="row">

    <div class="col-lg-2">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>ジャンル検索</th>
          </tr>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-lg-10">
      <table>
        <tr>
          <td><h2><b>商品一覧</b></h2></td>
          <td><h4>（全<%= @items_count %>件）</h4></td>
        </tr>

        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= image_tag item.image,size:"100x100" %></td>
            <td><%= link_to item.name, item_path(item.id) %></td>
            <td><%= item.price %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
      <div class="col-lg-3 offset-lg-4">
      <%= paginate @items %>
      </div>
    </div>
  </div>
</div>