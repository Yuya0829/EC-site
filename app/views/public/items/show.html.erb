<div class="container">
  <br>
  <br>
  <div class="row">

    <div class="col-lg-2">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>ジャンル検索</th>
          </tr>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-lg-3"><%= image_tag @item.image,size:"300x300" %></div>

    <div class="col-lg-8">
      <table class="table-borderless table-condensed">
        <tr>
          <td><h4><%= @item.name %></h4></td>
          <td><%= @item.introduction %></td>
          <td>¥<%= @item.price %></td>
        </tr>
      </table>
      <br>
      <div>個数選択</div>
      <div><%= submit_tag 'カートに入れる', class: "btn btn-success" %></div>
    </div>
  </div>
</div>