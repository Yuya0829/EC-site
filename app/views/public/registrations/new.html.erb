<div class="container">
  <h2>新規会員登録</h2>
  <% if @customer.errors.any? %>
      <%= @customer.errors.count %>errors prohibited this obj from being saved:
      <ul>
      <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>

  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-8">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <br>
        <table>
          <tbody>
            <tr>
              <td><%= f.label :名前 %></td>
              <td>(姓)<%= f.text_field :last_name %>
                  (名)<%= f.text_field :first_name %></td>
            </tr>

            <tr>
              <td><%= f.label :フリガナ %></td>
              <td>(セイ)<%= f.text_field :last_name_kana %>
                  (メイ)<%= f.text_field :first_name_kana %></td>
            </tr>

            <tr>
              <td><%= f.label :メールアドレス %></td>
              <td><%= f.text_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>

            <tr>
              <td><%= f.label :郵便番号 %></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>

            <tr>
              <td><%= f.label :住所 %></td>
              <td><%= f.text_field :address, :size=>"50" %></td>
            </tr>

            <tr>
              <td><%= f.label :電話番号 %></td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>

            <tr>
              <td><%= f.label :パスワード %></td>
              <td><%= f.text_field :encrypted_password %></td>
            </tr>

            <tr>
              <td><%= f.label :パスワード %></td>
              <td><%= f.text_field :encrypted_password %></td>
            </tr>

            <tr>
              <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
        <%= render "public/shared/links" %>
        <% end %>
    </div>
  </div>
</div>

<br>
<div class="container">
  <h2>既に登録済みの方</h2>
</div>

