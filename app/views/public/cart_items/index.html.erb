<div class="container">
  <br>
  <h1>ショッピングカート</h1>
  <div class="row">
  <div><%= submit_tag 'カートを空にする', class: "btn btn-danger" %></div>

  <table class="table table-bordered">
    <br>

    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= @cart_items.each do |cart_item| %>
      <tr>
        <td></td>
        <td><%= cart_item.item.with_tax_price%></td>
        <td><%= f.select :amount, *[1..10], {include_blank: '--個数選択--'} %>
            <%= submit_tag '変更', class: "btn btn-success" %></td>
        <td><%= cart_item.subtotal%></td>
         <% @合計金額 +=  cart_item.subtotal %>
        <td><%= submit_tag '削除する', class: "btn btn-danger" %></td>
      </tr>
    </tbody>
  </table>
  <% end %>

  <table class="table table-bordered">
    <tbody>
      <tr>
        <td>合計金額</td>
        <td></td>
      </tr>
    </tbody>
  </table>

  <table>
    <tbody>
      <tr>
        <td><%= submit_tag '買い物を続ける', class: "btn btn-primary" %></td>
      </tr>
      <tr>
        <td><%= submit_tag '情報入力に進む', class: "btn btn-success" %></td>
      </tr>
    </tbody>
  </table>

  </div>
</div>