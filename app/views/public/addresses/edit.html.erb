<div class="container">
  <h1>配送先編集</h1>
  <% if @address.errors.any? %>
      <%= @address.errors.count %>errors prohibited this obj from being saved:
      <ul>
      <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>

    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-8">

        <%= form_with model: @address, url: addresses_path do |f| %>

        <table>
          <tbody>
            <tr>
              <td><%= f.label :郵便番号 %>(ハイフンなし)</td>
              <td><%= f.text_field :postal_code %></td>
            </tr>

            <tr>
              <td><%= f.label :住所 %></td>
              <td><%= f.text_field :address %></td>
            </tr>

            <tr>
              <td><%= f.label :宛名 %></td>
              <td><%= f.text_field :name %></td>
              <td><%= f.submit '変更内容を保存', class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
</div>