<div class="container">
  <br>
  <br>
  <div class="row">

    <div class="col-lg-2">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>ジャンル検索</th>
          </tr>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-lg-10">
      <table>
        <thead>
          <tr>
            <td><img class="image" src="/assets/sunset.jpg"style= "height: 300px; width: 400px;"></td>
            <!--ようこそ、ながのCAKEへ！</br>-->
            <!--このサイトは、ケーキ販売のECサイトになります。</br>-->
            <!--会員でない方も商品は閲覧できますが、</br>-->
            <!--購入には会員登録が必要になります。</br>-->
          </tr>
        </thead>
        <tr>
          <td><h2><b>新着商品</b></h2></td>
        </tr>
        <tbody>
           <% @items.each do |item| %>
          <tr>
            <td><%= image_tag item.image,size:"100x100" %></td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
          </tr>
          <% end %>
        </tbody>
        <tr>
          <td><%= link_to "全ての商品を見る >", items_path %></td>
        </tr>
      </table>
    </div>
  </div>
</div>