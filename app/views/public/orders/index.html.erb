<div class="container">
  <br>
  <h1>注文履歴一覧</h1>
  <br>
  <div class="row">

  <table class="table table-bordered">
    <thead>
      <tr>
        <th bgcolor="#DCDCDC">注文日</th>
        <th bgcolor="#DCDCDC">配送先</th>
        <th bgcolor="#DCDCDC">注文商品</th>
        <th bgcolor="#DCDCDC">支払金額</th>
        <th bgcolor="#DCDCDC">ステータス</th>
        <th bgcolor="#DCDCDC">注文詳細</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>〒<%= order.postal_code %><%= order.address %></br>
              <%= order.name %>
        </td>
        <td>
          <% order.items.each do |item| %>
          <p><%= item.name %></p>
          <% end %>
        </td>
        <td><%= order.total_payment %></td>
        <td><%= Order.statuses_i18n[order.status] %></td>
        <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>