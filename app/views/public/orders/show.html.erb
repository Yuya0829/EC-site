<div class="container">
  <br>
  <h1>注文履歴詳細</h1>
  <br>

  <div class="row">
    <h5><b>注文情報</b></h5>
    <table class="table table-bordered">
       <tbody>
         <tr>
           <th bgcolor="#DCDCDC">注文日</th>
           <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
         </tr>

         <tr>
           <th bgcolor="#DCDCDC">配送先</th>
           <td>
             〒<%= @order.postal_code %></br>
               <%= @order.address %></br>
               <%= @order.name %>
           </td>
         </tr>

         <tr>
           <th bgcolor="#DCDCDC">支払方法</th>
           <td><%= @order.payment_method_i18n %></td>
         </tr>

         <tr>
           <th bgcolor="#DCDCDC">ステータス</th>
           <td><%= @order.status_i18n %></td>
         </tr>
       </tbody>
    </table>

    <h5><b>請求情報</b></h5>
    <table class="table table-bordered">
      <tbody>
        <tr>
           <th bgcolor="#DCDCDC">商品合計</th>
           <td><%= @total %></td>
         </tr>

         <tr>
           <th bgcolor="#DCDCDC">配送料</th>
           <td><%= @order.shipping_cost %></td>
         </tr>

         <tr>
           <th bgcolor="#DCDCDC">ご請求額</th>
           <td><%= @order.total_payment %></td>
         </tr>
      </tbody>
    </table>

    <h5><b>注文内容</b></h5>
    <table class="table table-bordered">
     <thead>
       <th bgcolor="#DCDCDC">商品</th>
       <th bgcolor="#DCDCDC">単価(税込)</th>
       <th bgcolor="#DCDCDC">個数</th>
       <th bgcolor="#DCDCDC">小計</th>
     </thead>

     <tbody>
       <% @order.order_details.each do |order_detail| %>
       <td><%= order_detail.item.name %></td>
       <td><%= order_detail.item.with_tax_price %></td>
       <td><%= order_detail.amount %></td>
       <td><%= order_detail.subtotal %></td>

       <% end %>
     </tbody>
    </table>
  </div>
</div>