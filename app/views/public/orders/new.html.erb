<div class="container">
  <h1>注文情報入力</h1>
  <br>

  <div class="row">

    <%= form_with model: @order, url: new_order_path do |f| %>

    <table>
      <tbody>
        <th><h3><b>支払方法</b></h3></th>

        <tr>
          <td>クレジットカード</td>
        </tr>

        <tr>
          <td>銀行振込</td>
        </tr>
      </tbody>

      <tbody>
        <th><h3><b>お届け先</b></h3></th>

        <tr>
          <td>ご自身の住所</td>
          <td><%= current_customer.address %></td>
          <td><%= current_customer.last_name %>
              <%= current_customer.first_name %></td>
        </tr>

        <tr>
          <td>登録済住所から選択</td>
          <td><%= f.collection_select :address, @addresses, :id, :address %></td>
        </tr>

        <tr>
          <td>新しいお届け先</td>
           <td><%= f.label :郵便番号 %>(ハイフンなし)</td>
           <td><%= f.text_field :postal_code %></td>
           <td><%= f.label :住所 %></td>
           <td><%= f.text_field :address, size: 30 %></td>
            <td><%= f.label :宛名 %></td>
            <td><%= f.text_field :name %></td>
        </tr>

        <tr>
          <td><%= submit_tag '確認画面へ進む', class: "btn btn-primary" %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>
</div>