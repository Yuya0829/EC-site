<div class="container">
  <h1>注文情報入力</h1>
  <br>

  <div class="row">

    <%= form_with model: @order, url: orders_path, class: "col-11" do |f| %>

    <div>
      <h3><b>支払方法</b></h3>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %></br>

      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
    </div>

    <div class="my-3">
      <h3><b>お届け先</b></h3>
      <div><%= f.radio_button :address, "current_customer" %>ご自身の住所</br>
           〒<%= current_customer.postal_code %>
           <%= current_customer.address %></br>
           <%= current_customer.last_name %>
           <%= current_customer.first_name %>
      </div>

      <div class="my-3">
        <%= f.radio_button :address, "current_customer" %>登録済住所から選択</br>
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
      </div>

      <div class="my-3">
        <%= f.radio_button :address, "current_customer" %>新しいお届け先</br>
        <%= f.label :郵便番号,"郵便番号(ハイフンなし)", class: "col-3" %>
        <%= f.text_field :postal_code %></br>
        <%= f.label :住所, class: "col-3" %>
        <%= f.text_field :address, size: 50 %></br>
        <%= f.label :宛名, class: "col-3" %>
        <%= f.text_field :name %>
      </div>
    </div>

    <div>
      <%= link_to "確認画面へ進む", orders_confirm_path, class: "btn btn-primary" %>
    </div>

    <% end %>
  </div>
</div>