<div class="container">
 <br>
 <h1>注文履歴一覧</h1>
 <br>

 <table class="table">
    <thead>
        <tr>
            <th bgcolor="#DCDCDC">購入日時</th>
            <th bgcolor="#DCDCDC">購入者</th>
            <th bgcolor="#DCDCDC">注文個数</th>
            <th bgcolor="#DCDCDC">注文ステータス</th>
        </tr>
    </thead>

    <tbody>
        <% @orders.each do |order| %>
        <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order.id) %></td>
        <td><%= order.customer.last_name + order.customer.first_name %></td>
        <td><%= order.order_details.sum(:amount) %></td>
        <td><%= order.status_i18n %></td>
        </tr>
        <% end %>
    </tbody>
 </table>
 <%= paginate @orders %>
</div>