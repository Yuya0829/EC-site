<div class="container">
 <br>
 <h1>注文履歴一覧</h1>
 <br>

 <table class="table">
    <thead>
        <tr>
            <th bgcolor="#DCDCDC">購入日時</th>
            <th bgcolor="#DCDCDC">購入者</th>
            <th bgcolor="#DCDCDC">注文個数</th>
            <th bgcolor="#DCDCDC">注文ステータス</th>
        </tr>
    </thead>

    <tbody>
        <% @order.each do |order| %>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.name %></td>
        <td><%= order.order_detail.amount %></td>
        <td><%= order.status_i18n %></td>
        <% end %>
    </tbody>
 </table>
 <%= paginate @order %>
</div>