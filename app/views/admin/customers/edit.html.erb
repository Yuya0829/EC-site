<div class="container">
  <br>
  <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>
   <% if @customer.errors.any? %>
      <%= @customer.errors.count %>errors prohibited this obj from being saved:
      <ul>
      <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>

    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

      <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>

      <br>
      <table>
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>

          <tr>
           <td><%= f.label :氏名 %></td>
           <td><%= f.text_field :last_name %>
               <%= f.text_field :first_name %></td>
          </tr>

          <tr>
           <td><%= f.label :フリガナ %></td>
           <td><%= f.text_field :last_name_kana %>
               <%= f.text_field :first_name_kana %></td>
          </tr>

          <tr>
            <td><%= f.label :郵便番号 %></td>
            <td><%= f.text_field :postal_code %></td>
          </tr>

          <tr>
            <td><%= f.label :住所 %></td>
            <td><%= f.text_field :address, size: 42 %></td>
          </tr>

          <tr>
            <td><%= f.label :電話番号 %></td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>

          <tr>
            <td><%= f.label :メールアドレス %>　　</td>
            <td><%= f.text_field :email %></td>
          </tr>

          <tr>
           <td><%= f.label :会員ステータス %></td>
           <td><%= f.radio_button :is_active,true %>
               <%= f.label :is_active, "有効" %>
               <%= f.radio_button :is_active,false %>
               <%= f.label :is_active, "退会" %></td>
         </tr>

         <tr>
           <td></td>
           <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
         </tr>

        </tbody>
      </table>
      <% end %>
      </div>
    </div>
</div>