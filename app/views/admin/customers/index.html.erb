<div class="container">

  <br>
  <h1>会員一覧</h1>

  <br>
  <table class="table">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.last_name, admin_customer_path(customer.id) %><%= link_to customer.first_name, admin_customer_path(customer.id) %></td>
        <td><%= customer.email %></td>
        <td><% if customer.is_active== true %>
               <p class="text-success">有効</p>
               <% else %>
               <p class="text-secondary">退会</p>
               <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>

  </table>
  <div class="col-lg-3 offset-lg-4">
    <%= paginate @customers %>
  </div>
</div>