<div class="container">

  <h1>ジャンル一覧・追加</h1>
  <br>

    <table>
      <tbody>
        <tr>
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <td>ジャンル名</td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '新規登録' %></td>
        </tr>
        <% end %>
        
        <tr>
          <div>ジャンル</div>
            <% @genres.each do |genre| %>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success", method: :get %></td>
            <% end %>
        </tr>
      </tbody>
    </table>

</div>