<div class="container">

    <h1>商品一覧</h1>
    <br>
    <br>

   <table class="table">
    <thead>
        <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
        </tr>
    </thead>

    <tbody>
        <% @items.each do |item| %>
        <tr>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><% if item.is_active== true %>
               <p class="text-success">販売中</p>
               <% else %>
               <p class="text-secondary">販売停止中</p>
               <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
    </table>
    <div class="col-lg-3 offset-lg-4">
    <%= paginate @items %>
    </div>
</div>