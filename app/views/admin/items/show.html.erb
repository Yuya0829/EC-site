<div class="container">
  <h1>商品詳細</h1>
  <br>
  <br>
  <br>

  <div class="row">
    <div class="col-lg-3"><%= image_tag @item.image,size:"300x300" %></div>

    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

      <table class="table-borderless table-condensed">

        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>

        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <td>税込価格</br>(税抜価格)</td>
          <td><%= @item.price %>( <%= @tax_out %> )円</td>
        </tr>

        <tr>
          <td>販売ステータス</td>
        </tr>

      </table>

      <br>
      <div class="col-lg-3 offset-lg-3">
        <td><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success", method: :get %></td>
      </div>
    </div>
  </div>
</div>